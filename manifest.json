{
  "manifest_version": 3,
  "name": "Markdown Copy",
  "version": "1.0",
  "description": "Copy selected content as Markdown",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      }
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}


