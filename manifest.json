{
  "manifest_version": 3,
  "name": "Download as Markdown",
  "version": "1.0",
  "description": "Download selected content as a Markdown file.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
